<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
  <msapplication>
    <tile>
      <square70x70logo src="https://tigonmsv.com/favicon.png"/>
      <square150x150logo src="https://tigonmsv.com/favicon.png"/>
      <wide310x150logo src="https://tigonmsv.com/logo.png"/>
      <square310x310logo src="https://tigonmsv.com/logo.png"/>
      <TileColor>#0e2e55</TileColor>
    </tile>
    <badge>
      <polling-uri src="https://tigonmsv.com/api/badge"/>
      <frequency>30</frequency>
    </badge>
    <notification>
      <polling-uri src="https://tigonmsv.com/api/notifications"/>
      <frequency>60</frequency>
      <cycle>1</cycle>
    </notification>
    <task>
      <name>Inventory Update</name>
      <frequency>daily</frequency>
      <uri>https://tigonmsv.com/inventory</uri>
    </task>
    <task>
      <name>Service Appointments</name>
      <frequency>daily</frequency>
      <uri>https://tigonmsv.com/services</uri>
    </task>
    <jumplist>
      <task>
        <name>Browse Medium Speed Vehicles</name>
        <description>View our complete MSV vehicle inventory</description>
        <arguments>https://tigonmsv.com/inventory</arguments>
        <iconUri>https://tigonmsv.com/favicon.png</iconUri>
      </task>
      <task>
        <name>Contact Sales</name>
        <description>Get in touch with our sales team</description>
        <arguments>https://tigonmsv.com/contact</arguments>
        <iconUri>https://tigonmsv.com/favicon.png</iconUri>
      </task>
      <task>
        <name>Schedule Service</name>
        <description>Book maintenance or repair service</description>
        <arguments>https://tigonmsv.com/services</arguments>
        <iconUri>https://tigonmsv.com/favicon.png</iconUri>
      </task>
      <task>
        <name>Rental Information</name>
        <description>Learn about our rental programs</description>
        <arguments>https://tigonmsv.com/rentals</arguments>
        <iconUri>https://tigonmsv.com/favicon.png</iconUri>
      </task>
      <task>
        <name>Financing Options</name>
        <description>Explore financing and payment plans</description>
        <arguments>https://tigonmsv.com/financing</arguments>
        <iconUri>https://tigonmsv.com/favicon.png</iconUri>
      </task>
    </jumplist>
    <tooltip>TIGON Medium Speed Vehicles - Electric MSV Dealership</tooltip>
    <startscreen>
      <image src="https://tigonmsv.com/attached_assets/image_1753282400827.png"/>
      <color>#0e2e55</color>
    </startscreen>
  </msapplication>
</browserconfig>
